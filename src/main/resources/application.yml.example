spring:
  main:
    allow-bean-definition-overriding: true
  application:
    name: zero-code-platform-backend
  # session 配置
  session:
    store-type: redis
    # session 30 天过期
    timeout: 2592000
  # mysql
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:zero_code_platform}
    username: ${DB_USERNAME:root}
    password: ${DB_PASSWORD:}
  # redis
  data:
    redis:
      host: ${REDIS_HOST:localhost}
      port: ${REDIS_PORT:6379}
      database: ${REDIS_DATABASE:0}
      password: ${REDIS_PASSWORD:}
  profiles:
    active: local
server:
  port: 8123
  servlet:
    context-path: /api
    # cookie 30 天过期
    session:
      cookie:
        max-age: 2592000
# springdoc-openapi
springdoc:
  group-configs:
    - group: 'default'
      paths-to-match: '/**'
      packages-to-scan: com.controller
# knife4j
knife4j:
  enable: true
  setting:
    language: zh_cn
# AI
langchain4j:
  open-ai:
    chat-model:
      base-url: ${AI_BASE_URL:https://api.deepseek.com}
      api-key: ${AI_API_KEY:}
      model-name: ${AI_MODEL_NAME:deepseek-chat}
      max-tokens: 8192
      log-requests: true
      log-responses: true
      max-retries: 3
    streaming-chat-model:
      base-url: ${AI_BASE_URL:https://api.deepseek.com}
      api-key: ${AI_API_KEY:}
      model-name: ${AI_MODEL_NAME:deepseek-chat}
      max-tokens: 8192
      log-requests: true
      log-responses: true
    # 推理 AI 模型配置（用于复杂的推理任务）
    reasoning-streaming-chat-model:
      base-url: ${AI_BASE_URL:https://api.deepseek.com}
      api-key: ${AI_API_KEY:}
      model-name: ${AI_REASONING_MODEL_NAME:deepseek-reasoner}
      max-tokens: 32768
      temperature: 0.1
      log-requests: true
      log-responses: true
    # 智能路由 AI 模型配置（用于简单的分类任务）
    routing-chat-model:
      base-url: ${ROUTING_AI_BASE_URL:https://dashscope.aliyuncs.com/compatible-mode/v1}
      api-key: ${ROUTING_AI_API_KEY:}
      model-name: ${ROUTING_AI_MODEL_NAME:qwen-turbo}
      max-tokens: 100
      log-requests: true
      log-responses: true
# Pexels 图片搜索配置
pexels:
  api-key: ${PEXELS_API_KEY:}
# 阿里云 DashScope 配置
dashscope:
  api-key: ${DASHSCOPE_API_KEY:}
  image-model: ${DASHSCOPE_IMAGE_MODEL:wan2.2-t2i-flash}
# MyBatis-Plus 配置
mybatis-plus:
  # Mapper XML 文件位置
  mapper-locations: classpath:mapper/*.xml
  # 实体类包路径
  type-aliases-package: com.model.entity
  # MyBatis 配置
  configuration:
    # 开启驼峰命名转换
    map-underscore-to-camel-case: true
    # 日志实现（开发环境使用标准输出）
    log-impl: org.apache.ibatis.logging.stdout.StdOutImpl
  # MyBatis-Plus 全局配置
  global-config:
    # 数据库配置
    db-config:
      # 主键类型：AUTO(0-数据库ID自增), NONE(1-无状态), INPUT(2-手动输入), ASSIGN_ID(3-分配ID), ASSIGN_UUID(4-分配UUID)
      id-type: ASSIGN_ID
      # 逻辑删除字段
      logic-delete-field: isDelete
      # 逻辑删除值（已删除）
      logic-delete-value: 1
      # 逻辑未删除值（未删除）
      logic-not-delete-value: 0

